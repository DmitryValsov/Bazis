 @model IEnumerable<Bazis.Models.Car>
 
 <style>
    /* =============== Переменные =============== */
    :root {
      --clr-bg-dark:       #082d5f;
       --clr-bg-light:      #FFFFFF;
     --clr-primary-start: #0C2E5E;
      --clr-primary-end:   #0A254D;
      --clr-text-white:    #FFFFFF;
      --clr-text-light:    rgba(255,255,255,0.8);
      --clr-text-dark:     #111827;
      --clr-text-gray:     #6B7280;

          
         --r-lg: 20px;


      --r-sm: 12px;
      --gap-xs: 4px;
      --gap-sm: 8px;
      --gap-md: 16px;
      --gap-lg: 24px;
      --ff: 'Inter', sans-serif;
      --shadow-card: 0 2px 6px rgba(0,0,0,0.1);
    }

    /* =============== Сброс =============== */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    html, body {
      height: 100%;
    }
    body {
      font-family: var(--ff);
     background: var(--clr-bg-dark);
      color: var(--clr-text-white);
      /* убрали flex-контейнер, чтобы скроллилась вся страница */
    }
    a { text-decoration: none; color: inherit; }
    img { max-width: 100%; display: block; }

    /* =============== Большой хедер (hero) =============== */
     .hero {
      width: 100%;
      height: 240px;
      background: linear-gradient(135deg, var(--clr-primary-start), var(--clr-primary-end));
      position: relative;
      
      overflow: hidden;
       padding: env(safe-area-inset-top) var(--gap-md) var(--gap-lg);
    }
    /* Малый тонкий круг сверху-слева */
    .hero::before {
      content: '';
      position: absolute;
      width: 500px;
      height: 500px;
      top: -250px;
      left: -250px;
      border: 1px solid rgba(255,255,255,0.1);
      border-radius: 50%;
    }
    /* Средний круг справа */
    .hero::after {
      content: '';
      position: absolute;
      width: 600px;
      height: 600px;
      top: 50px;
      right: -300px;
      border: 12px solid rgba(255,255,255,0.08);
      border-radius: 50%;
    }
    /* Большой круг внизу-справа */
    .hero .circle {
      position: absolute;
      width: 800px;
      height: 800px;
      bottom: -400px;
      right: -400px;
      border: 20px solid rgba(255,255,255,0.06);
      border-radius: 50%;
    }

    .hero__header {
      display: flex;
      align-items: center;
      gap: var(--gap-sm);
    }
    .hero__logo {
      width: 32px;
      height: 32px;
      background: var(--clr-primary-start);
      border-radius: var(--r-sm);
    }
    .hero__title {
      font-size: 18px;
      font-weight: 500;
    }
    .hero__main-title {
      margin-top: var(--gap-lg);
      font-size: 32px;
      font-weight: 700;
      line-height: 1.1;
    }
    .hero__subtitle {
      margin-top: var(--gap-xs);
      font-size: 15px;
      color: var(--clr-text-light);
    }
    .hero__btn {
      display: block;
      margin-top: var(--gap-lg);
      width: 100%;
      padding: 14px 0;
      font-size: 16px;
      font-weight: 600;
      text-align: center;
      color: #0A254D;
      background:linear-gradient(90deg,#FFFFFF);
      border: none;
      border-radius: var(--r-sm);
      cursor: pointer;
    }

    /* =============== Малый фиксированный хедер =============== */
    .small-header {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: env(safe-area-inset-top) var(--gap-md) 8px;
      background: var(--clr-bg-dark);
      z-index: 100;
      opacity: 0;
      pointer-events: none;
      transition: opacity .3s;
    }
    .small-header.visible {
      opacity: 1;
      pointer-events: auto;
    }
    .small-header button {
      background: none;
      border: none;
      padding: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
    }
    .small-header svg {
      width: 24px;
      height: 24px;
      fill: var(--clr-text-white);
    }
    .small-header .hero__title {
      font-size: 18px;
      font-weight: 500;
    }

    /* =============== Контент-контейнер =============== */
    .content {
      background: #F4F5F7;
      color: var(--clr-text-dark);
      padding: var(--gap-lg) var(--gap-md) 
      calc(var(--gap-lg) + env(safe-area-inset-bottom));
      border-top-left-radius: var(--r-lg);
      border-top-right-radius: var(--r-lg);
      /* скроллит вся страница, поэтому overflow у контента не нужен */
    }
    .section {
      margin-bottom: var(--gap-lg);
    }
    .section__header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: var(--gap-md);
    }
    .section__header h2 {
      font-size: 20px;
      font-weight: 600;
    }
    .section__header a {
      font-size: 14px;
      color: var(--clr-primary-start);
    }

    /* === Автомобили: карточки списка === */
    .car-list {
      display: flex;
      flex-direction: column;
      gap: var(--gap-md);
    }
    .car-item {
      display: flex;
      background: #fff;
      border-radius: var(--r-sm);
      box-shadow: var(--shadow-card);
      overflow: hidden;
    }
    .car-item__img {
      /*width: 120px;
      height: 120px;
      object-fit: cover;
      flex-shrink: 0;
    */
    padding: 5px;
    width: 150px;
    height: 125px;
    object-fit: cover;
    flex-shrink: 0;
    border-radius: var(--r-sm);
}
    }
    .car-item__body {
      flex: 1;
      padding: var(--gap-md);
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }
    .car-item__title {
      font-size: 18px;
      font-weight: 600;
      margin-bottom: 4px;
    }
    .car-item__year,
    .car-item__vin {
      font-size: 14px;
      color: var(--clr-text-gray);
      margin-bottom: 8px;
    }
    .btn-secondary {
      display: inline-flex;
      align-items: center;
      gap: 4px;
      padding: 6px 12px;
      font-size: 14px;
      background: #F3F4F6;
      color: var(--clr-text-dark);
      border: none;
      border-radius: var(--r-sm);
      cursor: pointer;
    }
    .btn-secondary svg {
      width: 16px;
      height: 16px;
      fill: var(--clr-text-gray);
    }

    /* === Кнопка "Добавить автомобиль" === */
    .btn-add {
      display: block;
      margin: var(--gap-lg) auto;
      max-width: 300px;
      width: 100%;
      padding: 14px 0;
      font-size: 16px;
      font-weight: 600;
      text-align: center;
      color: var(--clr-text-white);
      background: var(--clr-bg-dark);
      border: none;
      border-radius: var(--r-sm);
      cursor: pointer;
    }

    /* === История обслуживания === */
    .history {
      margin-top: var(--gap-lg);
    }
    .history__header {
      font-size: 20px;
      font-weight: 600;
      margin-bottom: var(--gap-md);
    }
    .history-list {
      display: flex;
      flex-direction: column;
      gap: var(--gap-md);
    }
    .history-item {
      display: flex;
      align-items: center;
      justify-content: space-between;
      background: #fff;
      border-radius: 30px;
      box-shadow: var(--shadow-card);
      padding: var(--gap-md);
    }
    .history-item__left {
      display: flex;
      align-items: center;
      gap: var(--gap-md);
    }
    .history-item__icon {
      width: 40px;
      height: 40px;
      background: #F3F4F6;
      border-radius: var(--r-sm);
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
    }
    .history-item__icon svg {
      width: 20px;
      height: 20px;
      fill: var(--clr-text-gray);
    }
    .history-item__info {
      display: flex;
      flex-direction: column;
      line-height: 1.2;
    }
    .history-item__title {
      font-size: 16px;
      font-weight: 600;
    }
    .history-item__subtitle {
      font-size: 14px;
      color: var(--clr-text-gray);
      margin-top: 4px;
    }
    .history-item__km {
      font-size: 14px;
      color: var(--clr-text-dark);
      flex-shrink: 0;
    }

    .car-item__body
    {
      padding: 10px;
    }

  
  </style>

  <!-- Большой хедер -->
  <div class="hero" id="hero">
    <div class="hero__header">
      <div class="hero__logo"></div>
      <div class="hero__title">Базис Моторс</div>
    </div>
    <div class="hero__main-title">Мои автомобили</div>
    <div class="hero__subtitle">Управляйте своими авто и историей обслуживания.</div>
    <button onclick="window.location.href='/Car/Create';" class="hero__btn" type="button">+ Добавить автомобиль</button>
  </div>



  <!-- Основной контент -->
  <div class="content">

    <!-- Мои автомобили -->
    <section class="section">
      <div class="section__header">
        <h2>Мои автомобили</h2>
        <a href="#"></a>
      </div>
      <div class="car-list">
        @foreach (var item in Model) {
        <div class="car-item">
          @if (!string.IsNullOrEmpty(item.Img))
         {
          <img src="~/images/@item.Img" alt="Chery Tiggo 8 Pro" class="car-item__img">
          }
          else
          {
            <img src="/img/cars/not-found.jpeg" alt="Chery Tiggo 8 Pro" class="car-item__img">
          }
          <div class="car-item__body">
            <div>
              <div class="car-item__title">@Html.DisplayFor(modelItem => item.Brand) @Html.DisplayFor(modelItem => item.Model)</div>
              <div class="car-item__year">@Html.DisplayFor(modelItem => item.Year)</div>
              <div class="car-item__vin">VIN @Html.DisplayFor(modelItem => item.VIN)</div>
            </div>
            <button class="btn-secondary">
              История обслуживания
              <svg viewBox="0 0 24 24"><path d="M9 18l6-6-6-6"/></svg>
            </button>
          </div>
        </div>
        }
        
      </div>

      <!--<button class="btn-add">+ Добавить автомобиль</button>-->
    </section>

    <!-- История обслуживания выбранного авто -->
    <section class="section history">
      <div class="history__header">Chery Tiggo 8 Pro, 2022</div>
      <div class="history-list">
        <div class="history-item">
          <div class="history-item__left">
            <div class="history-item__icon">
              <svg viewBox="0 0 24 24"><path d="M6 2h1v2H6V2zm10 0h1v2h-1V2zm-10 4h12v14H6V6z"/></svg>
            </div>
            <div class="history-item__info">
              <div class="history-item__title">Замена масла</div>
              <div class="history-item__subtitle">Выполнено 30 150 км</div>
            </div>
          </div>
          <div class="history-item__km">30 150 км</div>
        </div>

        <div class="history-item">
          <div class="history-item__left">
            <div class="history-item__icon">
              <svg viewBox="0 0 24 24"><path d="M6 2h1v2H6V2zm10 0h1v2h-1V2zm-10 4h12v14H6V6z"/></svg>
            </div>
            <div class="history-item__info">
              <div class="history-item__title">Сезонная замена шин</div>
              <div class="history-item__subtitle">Выполнено 26 300 км</div>
            </div>
          </div>
          <div class="history-item__km">26 300 км</div>
        </div>

        <div class="history-item">
          <div class="history-item__left">
            <div class="history-item__icon">
              <svg viewBox="0 0 24 24"><path d="M6 2h1v2H6V2zm10 0h1v2h-1V2zm-10 4h12v14H6V6z"/></svg>
            </div>
            <div class="history-item__info">
              <div class="history-item__title">Замена стекловых стёкол</div>
              <div class="history-item__subtitle">Выполнено 25 900 км</div>
            </div>
          </div>
          <div class="history-item__km">25 900 км</div>
        </div>
      </div>
    </section>

  </div>

  

  <script>
    const hero = document.getElementById('hero');
    const smallHdr = document.getElementById('smallHeader');

    window.addEventListener('scroll', () => {
      smallHdr.classList.toggle('visible', window.scrollY >= hero.offsetHeight);
    });
  </script>


